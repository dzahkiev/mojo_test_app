% layout 'default';
<div class = "page-header">
<h4><%= $msg %></43>
</div>
<% if (my $message = flash 'message' ) { %>
<div class="alert alert-success ">
   <%= $message %>
</div>
     <% } %>

<table class="table table-striped table-bordered table-hover table-condensed table-bordered"   >
	<tr>
		<th>ID</th>
		<th>E-mail</th>
		<th>Password</th>
		<th>Money</th>
		<th>Sex</th>
		<th>Updated</th>
		<th>Created</th>
		<th>Edit</th>
		<th>Remove</th>
	</tr>

 % for ( sort keys %$k) {
	 <tr>
	 <td><%= $k->{$_}{id} %></td>
	 <td><%= $k->{$_}{email} %></td>
	 <td><%= $k->{$_}{pass} %></td>
	 <td><%= $k->{$_}{money} %></td>
	 <td><%= $k->{$_}{sex} %></td>
	 <td><%= $k->{$_}{updated} %></td>
	 <td><%= $k->{$_}{created} %></td>
	 <td align="center"><a href = "users/<%=$k->{$_}{id}%>/edit"><span class="glyphicon glyphicon-pencil"></span></a></td>
	 <td align="center"><a href = "users/<%=$k->{$_}{id}%>/remove"><span class="glyphicon glyphicon-remove"></span></a></td>
	 </tr>

 %}







