% layout 'default';
<div class = "page-header">
	<h4><%= $msg %></h3> 
</div> 
<form  class="col-md-3"  enctype="multipart/form-data" action="<%= $link %>" method="post" name="add_user" >
	
	  
	<p class="form-group <%= ( !$fields->{email}{valid} ) ? 'has-error' : 'has-success' %>">
	<b class="control-label"> E-mail</b>
		<input class="form-control" type="text" size="40" name="email" value="<%= $fields->{0}{email} %>">
	</p>
	 <p class="form-group <%= ( !$fields->{password}{valid} ) ? 'has-error' : 'has-success'%>">
		<b class="control-label">Password</b><br> 
		<input class="form-control"  type="password" size="40" name="password">
	</p>
	<p class="form-group">
	<b class="control-label"> Name</b>
		<input class="form-control" type="text" size="40" name="name" value="<%= $fields->{0}{name} %>">
	</p>
	<p class="form-group ">
		<b class="control-label">Money</b><br>
		<input class="form-control"  type="text" size="40" name="money" value="<%= $fields->{0}{money} %>">
	</p>
	<p class="form-group ">
		<b class="control-label">Sex</b><br>
		<select  class="form-control"  name="sex">
    	<option>unknown</option>
    	<option>F</option>
    	<option>M</option>
 		</select>
	</p>
	<p class="form-group <%= ( !$fields->{date}{valid} ) ? 'has-error' : 'has-success' %>">
		<b class="control-label" >Created</b><br>
		<input class="form-control"  type="text" size="40" name="created" value="<%= $fields->{0}{created} %>">
	</p>
	<p class="form-group">
		<b class="control-label" >Image</b><br>
		<input class="form-control"  type="file" size="40" name="uploadImage" id="fileUpload">
	</p>
	<p class="form-group ">
		<input    type="submit" class="btn btn-default navbar-btn" size="40" name="submit" value="<%=$btn_text%>">
	</p> 

</form>






