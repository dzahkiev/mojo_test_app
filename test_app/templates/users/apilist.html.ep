% layout 'default'; 
% use Mojo::JSON qw(decode_json encode_json); 

<div class = "page-header">
<h4><%= $msg %></h4>
</div>
<form action="/users/search" method="post" name="search_form">
	<input type="text" name="search_str" value="<%= $searching_string %>">
	<button type="submit" name="search" value="search">Search</button>
</form>
<br>
<% if (my $message = flash 'message' ) { %>
<div class="alert alert-success ">
   <%= $message %>
</div>
     <% } %>
  <%= $k %>
<% my $k = decode_json $k ; 
unless ($k) { %> 
<div class="alert alert-warning ">
   No data selected!
</div>
<% } else { %>
<table class="table table-striped table-bordered table-hover table-condensed table-bordered"   >
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Photo</th>
		<th>E-mail</th>
		<th>Password</th>
		<th>Money</th>
		<th>Sex</th>
		<th>Updated</th>
		<th>Created</th>
		<th>Edit</th>
		<th>Remove</th>
	</tr>

 <%  for my $k  ( @$k ) { %>
<tr>
	 <td><%= $k->{id} %></td>
	 <td><%= $k->{name} %></td>
	 <td>
	 	<% if ( $k->{photo} ) { %>
	 		<img src = "/img/<%= $k->{photo} %>"  width = "80px" />
	 	<% } %>
	 </td>
	 <td><%= $k->{email} %></td>
	 <td><%= $k->{pass} %></td>
	 <td><%= $k->{money} %></td>
	 <td><%= $k->{sex} %></td>
	 <td><%= $k->{updated} %></td>
	 <td><%= $k->{created} %></td>
	 <td align="center"><a href = "/users/<%=$k->{$_}{id}%>/edit"><span class="glyphicon glyphicon-pencil"></span></a></td>
	 <td align="center"><a href = "/users/<%=$k->{$_}{id}%>/remove"><span class="glyphicon glyphicon-remove"></span></a></td>
	 </tr>

<% } }%> 






